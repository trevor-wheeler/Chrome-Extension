{
    "manifest_version": 3,
    "name": "Short-form Content Removal Tool",
    "short_name": "Remover",
    "version": "2.0.0",
    "description": "Remove Instagram Reels and Youtube Shorts",
    "icons": {
        "48": "icon.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/",
        "https://www.instagram.com/"
    ]
}
