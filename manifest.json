{
    "manifest_version": 3,
    "name": "Focus - Short Form Content Blocker",
    "short_name": "Focus",
    "version": "2.0.0",
    "description": "Block and remove short form content from YouTube, Instagram, and FaceBook.",
    "icons": {
        "48": "icon.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/",
        "https://www.instagram.com/",
        "https://www.facebook.com/"
    ]
}
